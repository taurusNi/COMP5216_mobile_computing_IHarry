<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/readbackgound"
   >

    <!--<com.taurus.iharry.sliding.PageMoveLayout-->
        <!--android:id="@+id/page_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</com.taurus.iharry.sliding.PageMoveLayout>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/iamge1"
            android:alpha="0.9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textview"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:id="@+id/newTextView1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Go"
            android:textSize="20dp"
            android:id="@+id/aniTextView"
            android:layout_alignBottom="@+id/newTextView1"
            android:layout_alignRight="@+id/newTextView1"
            android:layout_alignEnd="@+id/newTextView1"
            android:layout_marginRight="64dp"
            android:layout_marginEnd="64dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/popView"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/showView1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView111"
        android:alpha="0.9"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.9"
        android:id="@+id/imageView222"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />


</RelativeLayout>