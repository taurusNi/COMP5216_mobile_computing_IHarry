            android:layout_below="@id/contentOF" />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/contentOF"
            android:layout_marginLeft="100dp"
            android:background="@drawable/light"
            android:id="@+id/light_button"
            android:layout_alignLeft="@id/contentOF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="light"
            android:layout_marginLeft="109dp"
            android:layout_alignLeft="@id/textView1"
            android:textColor="@color/colorPoptext"
            android:id="@+id/textView2"
            android:layout_alignTop="@id/textView1"
           />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/contentOF"
            android:background="@drawable/font"
            android:id="@+id/font"
            android:layout_marginLeft="100dp"
            android:layout_alignLeft="@id/light_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="102dp"
            android:layout_height="wrap_content"
            android:text="font"
            android:textColor="@color/colorPoptext"
            android:id="@+id/textView4"
            android:layout_alignTop="@id/textView1"
            android:layout_alignLeft="@id/textView2" />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/contentOF"
            android:background="@drawable/switch1"
            android:id="@+id/Switch"
            android:layout_marginLeft="90dp"
            android:layout_alignLeft="@id/font" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="83dp"
            android:layout_height="wrap_content"
            android:text="switch"
            android:textColor="@color/colorPoptext"
            android:id="@+id/textView5"
            android:layout_alignLeft="@id/textView4"
            android:layout_alignTop="@id/textView1"/>


    </RelativeLayout>
